<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDnycWatbGyK6ldFqErjFtko1yeMclNUOA&amp;sensor=true"></script>
<script>
    $(document).ready(function () {
        function initialize() {
            var mapOptions = {
                center: new google.maps.LatLng(13.684831475382, 100.62673676759),
                zoom: 18,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                scrollwheel: true,
                draggable: true,
                panControl: true,
                zoomControl: true,
                mapTypeControl: true,
                scaleControl: true,
                streetViewControl: true,
                overviewMapControl: true,
                rotateControl: true,
            };

            var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(13.684831475382, 100.62673676759),
            });
            marker.setMap(map);
        }       
        google.maps.event.addDomListener(window, 'load', initialize);
        //$("#compose-textarea").wysihtml5();
        CKEDITOR.replace('compose-textarea');
    });
</script>
