                                </div>
                                <script>
                                    $("#tbEmail").focusout(function () {
                                        if ($("#tbEmail").val() == "" || !isValidEmailAddress($("#tbEmail").val())) {
                                            $("#pnEmail").addClass("has-error");
                                            $("#pnEmail .help-block").show();
                                        }
                                        else {
                                            $("#pnEmail").removeClass("has-error");
                                            $("#pnEmail .help-block").hide();
                                        }
                                    });
                                </script>
                            </div>
                        </div>
