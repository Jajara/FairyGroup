                    <script>
    $(document).ready(function() {
        //set initial state.

        $('#chkConfirm').change(function() {
            if ($('#chkConfirm').is(':checked')) {
                $('#btRegis').removeAttr('disabled');
            }else {
                $('#btRegis').attr('disabled','disabled');
            }
        });
    });

    function Register() {
        var myObj = {
            UserID: 0
            , UserName:$("#tbEmail").val()
            , Password: $("#tbPassword").val()
            , FirstNameTH: $("#tbName").val()
            , LastNameTH: $("#tbLname").val()
            , FirstNameEN: $("#tbNameEn").val()
            , LastNameEN: $("#tbLnameEn").val()
            , NickName: $("#tbNickName").val()
            , Sex: $("#cbSex").val()
            , UserTypeID: 5
            , EmailAccount: $("#tbEmail").val()
            , Mobile: $("#tbMobile").val()
            , Phone: $("#tbPhone").val()
        };


        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveUser", "Home", new { area = string.Empty })",
            data: JSON.stringify(myObj),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                window.location.href = "@Url.Action("Index", "Home", new { area = string.Empty })";
            } //success
        });
    }
